{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"build",
				"bvlwebtools.sln"
			],
			"problemMatcher": [
				"$msCompile"
			],
			"group": "build"
		},
		{
			"label": "run",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"run",
				"--project",
				"src/abc.bvl.AdminTool.Api"
			],
			"isBackground": true,
			"group": "test"
		},
		{
			"label": "Benchmark: Run All",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"run",
				"-c",
				"Release",
				"--project",
				"benchmarks/abc.bvl.AdminTool.Benchmarks"
			],
			"group": "test",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"problemMatcher": []
		},
		{
			"label": "Benchmark: Repository Performance",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"run",
				"-c",
				"Release",
				"--project",
				"benchmarks/abc.bvl.AdminTool.Benchmarks",
				"--",
				"--filter",
				"*RepositoryBenchmarks*"
			],
			"group": "test",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"problemMatcher": []
		},
		{
			"label": "Benchmark: Pagination Performance",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"run",
				"-c",
				"Release",
				"--project",
				"benchmarks/abc.bvl.AdminTool.Benchmarks",
				"--",
				"--filter",
				"*PaginationBenchmarks*"
			],
			"group": "test",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"problemMatcher": []
		},
		{
			"label": "Benchmark: List Available",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"run",
				"-c",
				"Release",
				"--project",
				"benchmarks/abc.bvl.AdminTool.Benchmarks",
				"--",
				"--list",
				"flat"
			],
			"group": "test",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"problemMatcher": []
		},
		{
			"label": "Benchmark: Oracle (Real Database)",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"run",
				"-c",
				"Release",
				"--project",
				"benchmarks/abc.bvl.AdminTool.Benchmarks",
				"--",
				"--filter",
				"*OracleBenchmarks*"
			],
			"group": "test",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"problemMatcher": []
		},
		{
			"label": "Benchmark: In-Memory vs Oracle Comparison",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"run",
				"-c",
				"Release",
				"--project",
				"benchmarks/abc.bvl.AdminTool.Benchmarks",
				"--",
				"--filter",
				"*PaginatedGroupQuery*"
			],
			"group": "test",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"problemMatcher": []
		}
	]
}